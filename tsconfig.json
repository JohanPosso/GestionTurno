{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "es5", "es6", "esnext", "esnext.asynciterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "utils/matchRolests",
    "components/ModalData.js",
    "components/Modal.js"
  ],
  "exclude": ["node_modules", "createFile.ts"]
}
